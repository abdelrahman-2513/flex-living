# Development Dockerfile for Frontend
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Start in development mode with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
